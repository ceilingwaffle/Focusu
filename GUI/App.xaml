<Application
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Focusu"
             xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Focusu.App"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Color x:Key="ElementTitleColor">White</Color>
        <Thickness x:Key="GroupBoxMargin">10</Thickness>
        <SolidColorBrush x:Key="ElementColor" Color="White"/>
        <SolidColorBrush x:Key="HiddenColor" Color="Cyan"/>
        <SolidColorBrush x:Key="VisibleColor" Color="#FF2EFF00"/>
        <Thickness x:Key="VerticalElementMargin">0,0,0,10</Thickness>

        <System:Double x:Key="CheckboxHeight">23</System:Double>
        <SolidColorBrush x:Key="WindowBackgroundColor" Color="#FF404040"/>

    </Application.Resources>
</Application>
